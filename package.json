{
  "name": "link-search",
  "version": "0.1.0",
  "description": "Argo - Path query engine for Thalassa knowledge graph",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
