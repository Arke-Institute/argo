    "test": "npm run test:setup && npm run test:run"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "wrangler": "^4.51.0"
  }
}
